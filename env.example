# Configuration Environnement
ENVIRONMENT=development
# production pour la production, development pour le développement

# ===================
# BASE DE DONNÉES
# ===================

# MongoDB (Requis)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=kairos
MONGODB_TIMEOUT_MS=5000

# PostgreSQL (Optionnel)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eduverse

# ===================
# SÉCURITÉ
# ===================

# SECRET_KEY - OBLIGATOIRE en production (générer avec: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here-minimum-32-characters
ALGORITHM=HS256

# ===================
# OPENAI / IA
# ===================

# OpenAI API Key (Requis pour les fonctionnalités IA)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_PROXY=
OPENAI_MODEL=gpt-5-mini
GPT_5_2_MODEL=gpt-5.2
GPT_5_MINI_MODEL=gpt-5-mini
GPT_5_NANO_MODEL=gpt-5-nano

# Limites de coût IA
AI_MONTHLY_TOKEN_LIMIT=10000000
AI_MONTHLY_COST_LIMIT_EUR=50.0

# ===================
# REDIS (Optionnel)
# ===================

# Redis pour le cache et rate limiting
REDIS_URL=redis://localhost:6379/0

# ===================
# FRONTEND
# ===================

# URL du frontend (pour les liens dans les emails)
FRONTEND_URL=http://localhost:5173

# URL de l'API backend pour le frontend
VITE_API_URL=http://localhost:8000

# ===================
# STRIPE (Optionnel - Pour les paiements)
# ===================

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id

# ===================
# SÉCURITÉ SUPPLÉMENTAIRE
# ===================

# CSRF Protection (true/false)
ENABLE_CSRF=false

# Allowed Hosts (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===================
# RATE LIMITING
# ===================

RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
AI_RATE_LIMIT_PER_MINUTE=10
AI_RATE_LIMIT_PER_HOUR=50
